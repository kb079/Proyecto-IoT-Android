<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ProyectoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue_secundary</item>
        <item name="colorOnSecondary">@color/blue_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- ToolBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.ProyectoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="Base.Widget.AppCompat.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/blue_dark</item>
        <item name="height">56dp</item>
    </style>

    <!-- ActionButton -->
    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/blue_primary</item>
    </style>


    <!-- Estilo del Login -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_primary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="FirebaseUI.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>


    <!-- Estilo del Menu -->
    <style name="MenuItems" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:itemPadding">50dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@drawable/menu_divider</item>
    </style>

    <style name="MySearchViewTheme" parent="Widget.AppCompat.SearchView">
        <!-- Changes icons color -->
        <item name="android:tint">@color/white</item>
    </style>



    <style name="Theme.ProyectoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ProyectoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>