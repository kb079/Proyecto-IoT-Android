<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemPhoto"
        android:layout_width="155dp"
        android:layout_height="126dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/itemName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/itemBrand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/itemPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemBrand"
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:text="cargando..."
        app:layout_constraintBottom_toTopOf="@+id/itemExpDate"
        app:layout_constraintEnd_toEndOf="@+id/itemName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/itemName"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />

    <TextView
        android:id="@+id/itemExpDate"
        android:layout_width="182dp"
        android:layout_height="26dp"
        app:layout_constraintBottom_toTopOf="@+id/itemName4"
        app:layout_constraintEnd_toEndOf="@+id/itemBrand"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/itemBrand"
        app:layout_constraintTop_toBottomOf="@+id/itemBrand" />

    <TextView
        android:id="@+id/itemName4"
        android:layout_width="139dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/itemExpDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/itemExpDate"
        app:layout_constraintTop_toBottomOf="@+id/itemExpDate"
        app:layout_constraintVertical_bias="0.589" />

    <TextView
        android:id="@+id/itemQty"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:background="@drawable/round_bg"
        android:foregroundGravity="center"
        android:paddingTop="6dp"
        android:text="..."
        android:textAlignment="center"
        android:textDirection="firstStrongRtl"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemName4"
        app:layout_constraintTop_toBottomOf="@+id/itemExpDate" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>